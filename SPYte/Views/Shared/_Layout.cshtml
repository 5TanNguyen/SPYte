    <style>
        /* SLIDE */

        .containerr {
            position: relative;
            left: 50%;
            top: 0;
            transform: translate(-50%, 10%);
            width: 100%;
            height: 600px;
            background-color: red;
        }

        #slide {
            width: max-content;
            margin-top: 5px;
        }

        .slide_item {
            width: 200px;
            height: 300px;
            background-position: 50% 50%;
            display: inline-block;
            transition: 0.5s;
            background-size: cover;
            position: absolute;
            z-index: 1;
            top: 50%;
            transform: translate(0, -50%);
            border-radius: 20px;
            box-shadow: 0 30px 50px #505050;
        }

        /*.slide_image{
            width: 200px;
            height: 300px;
            border-radius: 20px;
        }*/

        .slide_item:nth-child(1),
        .slide_item:nth-child(2) {
            left: 0;
            top: 0;
            transform: translate(0,0);
            border-radius: 0;
            width: 100%;
            height: 100%;
            box-shadow: none;
            background-color: blue;
        }

        .slide_item:nth-child(3) {
            left: calc(50% + 10px);
        }

        .slide_item:nth-child(4) {
            left: calc(50% + 220px);
        }

        .slide_item:nth-child(5) {
            left: calc(50% + 220px);
            opacity: 0;
        }

            .slide_item:nth-child(n + 6) {
                left: calc(50% + 300px);
                opacity: 0;
            }

        .slide_item .slide_content {
            position: absolute;
            top: 50%;
            left: 100px;
            width: 300px;
            text-align: left;
            padding: 0;
            color: #eee;
            transform: translate(0, -50%);
            display: none;
        }

        .slide_item:nth-child(2) .slide_content {
            display: block;
            z-index: 111111;
        }

        .slide_item .slide_name {
            font-family: system-ui;
            font-size: 40px;
            font-weight: bold;
            color: yellow;
            margin: 20px 0;
            border: 20px;
            opacity: 0;
            animation: showcontent 1s ease-in-out 1 forwards
        }

        .slide_item .slide_des {
            font-family: system-ui;
            font-weight: bold;
            color: yellow;
            margin: 20px 0;
            opacity: 0;
            animation: showcontent 1s ease-in-out 0.3s 1 forwards
        }

        .slide_item button {
            padding: 10px 20px;
            border: none;
            opacity: 0;
            animation: showcontent 1s ease-in-out 0.6s 1 forwards
        }

        @@-webkit-keyframes showcontent {
            from {
                opacity: 0;
                transform: translate(0, 180px);
                filter: blur(33px);
            }

            to {
                opacity: 1;
                transform: translate(0, 0);
                filter: blur(0);
            }
        }

        .buttons {
            position: absolute;
            bottom: 30px;
            z-index: 55555555;
            text-align: center;
            width: 100%;
        }

        .buttons button {
            width: 50px;
            height: 50px;
            border-radius: 50px;
            border: 1px solid #555;
            transition: 0.5s;
        }

        .buttons button:hover {
            background-color: #33CC00;
        }

        
